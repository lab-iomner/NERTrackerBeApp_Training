@page "/"

<PageTitle>Base</PageTitle>
<div class="h-full mt-16 p-0 px-2 grid md:grid-cols-6" style="padding:0rem;">
    <div class="col-span-2">
        <BaseList Refresh=@_refresh OnItemEdit=@(e => _benefTracker = e)/></div>
    @if (!_isSmall)
    {
        <div class="col-span-2"><BaseEdit CanRefresh=@(e => _refresh = e) Model=@_benefTracker /> </div>
    }
</div>
<RadzenMediaQuery Query=@("(max-width: 768px)") Change=@(e => _isSmall = e)/>
@code {
    bool _isSmall = false;
    bool _refresh = false;

    BenefTracker _benefTracker = new BenefTracker();

}